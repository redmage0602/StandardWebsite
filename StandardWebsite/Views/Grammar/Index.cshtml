@model IEnumerable<StandardWebsite.Models.Grammar>

@{
    ViewBag.Title = "List Grammars";
}

<div id="content">
    <div class="inner_content">
        <div class="statistic clearfix">
            <div class="current_page float_left">
                <span style="font-size:30px;">@ViewBag.Title</span>
            </div>

            <div class="charts clearfix">
                <div class="statistic_chart pull-right">
                    <a href="@Url.Action("create", "grammar")" class="blue btn btn-xlarge">
                        <i class="icon-plus-sign custom-icon-plus-sign"></i>
                        Create new grammar
                    </a>
                </div>
            </div>
        </div>

        <div class="widgets_area">
            <div class="row-fluid">
                <div class="span12">
                    <div class="well blue">
                        <div class="well-header">
                            <h5>Number of records: <span id="number-record"></span></h5>
                        </div>

                        <div class="well-content">
                            <table class="table table-striped table-bordered table-hover" id="grammar-datatable">
                                <thead>
                                    <tr>
                                        <th style="text-align:center; width:40px;">#</th>
                                        <th style="text-align:center;">@Html.DisplayNameFor(model => model.Content)</th>
                                        <th style="width:80px;">&nbsp;</th>
                                        <th style="width:80px;">&nbsp;</th>
                                        <th style="width:80px;">&nbsp;</th>
                                    </tr>
                                </thead>

                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section CustomScript
{
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            var datatable = $("#grammar-datatable").dataTable({
                "aaSorting": [[1, "asc"]],
                "sDom": "<'tableHeader'<l><'clearfix'f>r>t<'tableFooter'<i><'clearfix'p>>",
                "sPaginationType": "bootstrap",
                "bProcessing": true,
                "bServerSide": true,
                "bSort": true,
                "bSortClasses": true,
                "bPaginate": true,
                "sAjaxSource": '@Url.Action("indexajax", "grammar")',
                "fnDrawCallback": function () {
                    $("#number-record").text(this.fnSettings().fnRecordsDisplay());
                },
                "aoColumnDefs": [{
                    "sClass": "text-center-important",
                    "aTargets": [0, 2, 3, 4]
                }],
                "aoColumns": [
                    {
                        "sName": "#",
                        "bSortable": false,
                        "fnRender": function (oObj) {
                            return oObj.aData[0];
                        }
                    },
                    {
                        "sName": "Content",
                        "bSortable": true,
                        "fnRender": function (oObj) {
                            return oObj.aData[1];
                        }
                    },
                    {
                        "sName": "",
                        "bSortable": false,
                        "fnRender": function (oObj) {
                            return '<a href="/grammar/detail/' + oObj.aData[2] + '" class="blue btn" style="width:50px;">Detail</a>';
                        }
                    },
                    {
                        "sName": "",
                        "bSortable": false,
                        "fnRender": function (oObj) {
                            return '<a href="/grammar/edit/' + oObj.aData[3] + '" class="grey btn" style="width:50px;">Edit</a>';
                        }
                    },
                    {
                        "sName": "",
                        "bSortable": false,
                        "fnRender": function (oObj) {
                            return '<a href="/grammar/delete/' + oObj.aData[4] + '" class="red btn" style="width:50px;">Delete</a>';
                        }
                    }
                ]
            });

            $(".dataTables_filter input").unbind().bind("keyup", function (e) {
                if (e.keyCode == 13 || $(this).val() == "") {
                    datatable.fnFilter($(this).val());
                };
            });
        });
    </script>
}