@model IEnumerable<StandardWebsite.Models.Tag>

@{
    ViewBag.Title = "List Tags";
    int i = 1;
}

<div id="content">
    <div class="inner_content">
        <div class="statistic clearfix">
            <div class="current_page float_left">
                <span style="font-size:30px;">@ViewBag.Title</span>
            </div>

            <div class="charts clearfix">
                <div class="statistic_chart pull-right">
                    <a href="@Url.Action("create", "tag")" class="blue btn btn-xlarge">
                        <i class="icon-plus-sign custom-icon-plus-sign"></i>
                        Create new tag
                    </a>
                </div>
            </div>
        </div>

        <div class="widgets_area">
            <div class="row-fluid">
                <div class="span12">
                    <div class="well blue">
                        <div class="well-header">
                            <h5>Number of records: @Model.Count()</h5>
                        </div>

                        <div class="well-content">
                            <table class="table table-striped table-bordered table-hover datatable">
                                <thead>
                                    <tr>
                                        <th style="display:none;"></th>
                                        <th style="text-align:center; width:40px;">#</th>
                                        <th style="text-align:center;">@Html.DisplayNameFor(model => model.Content)</th>
                                        <th style="width:80px;">&nbsp;</th>
                                        <th style="width:80px;">&nbsp;</th>
                                        <th style="width:80px;">&nbsp;</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td style="display:none;"></td>
                                            <td style="text-align:center;">@(i++)</td>
                                            <td>@Html.DisplayFor(model => item.Content)</td>

                                            <td style="text-align:center;">
                                                <a href="@Url.Action("detail", "tag", new { id = item.Id })" class="blue btn" style="width:50px;">
                                                    Detail
                                                </a>
                                            </td>

                                            <td style="text-align:center;">
                                                <a href="@Url.Action("edit", "tag", new { id = item.Id })" class="grey btn" style="width:50px;">
                                                    Edit
                                                </a>
                                            </td>

                                            <td style="text-align:center;">
                                                <a href="@Url.Action("delete", "tag", new { id = item.Id })" class="red btn" style="width:50px;">
                                                    Delete
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>